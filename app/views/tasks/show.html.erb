<h1>Task - SHOW</h1>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<ul>
<li> <%= link_to 'Home', tasks_path %></li>
<li> <%= link_to 'Update', edit_task_url %> </li>
<li> <%= link_to "Delete",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
</ul>
